{
    "layer": "top",
    "position": "top",
    "reload_style_on_change": true,
    "modules-left": [
        "network",
        "battery"
    ],
    "modules-center": [
        "image#album-art",   
        "custom/spotify"
    ],
    "modules-right": [
        "disk",
        "memory",
        "clock"
    ],
    "clock": {
        "format": "/ {:%I:%M %p}",
        "interval": 1
    },
    "disk": {
        "interval": 30,
        "format": "DISk : {percentage_used}%",
        "path": "/"
    },
    "memory": {
        "format": "/ MEM : {percentage}%"
    },
    "network": {
        "format-wifi": " Ôá´ ",
        "format-ethernet": " Óºâ ",
        "format-disconnected": " Ó¨Å ",
        "tooltip-format": "{ipaddr}",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´ | {ipaddr}",
        "tooltip-format-ethernet": "{ifname} üñß | {ipaddr}"
    },
    "battery": {
        "interval": 1,
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "/ {icon} : {capacity}%",
        "format-charging": "{capacity}% Û∞ÇÑ ",
        "format-plugged": "{capacity}% Û∞ÇÑ Ó¨≠",
        "format-alt": "{time} {icon}",
        "format-icons": [
            "Û∞Åª",
            "Û∞Åº",
            "Û∞Åæ",
            "Û∞ÇÄ",
            "Û∞ÇÇ",
            "Û∞Åπ"
        ]
    },
      "image#album-art": {
        "path": "/tmp/spotify_cover.jpg",
        "size": 32,
        "interval": 1,
        "on-click": "~/.config/waybar/album_art.sh"
    },
  "custom/spotify": {
        "exec": "$HOME/.config/waybar/spotify.sh", 
        "format": "ÔÜº  {}  ÔÄÅ ",
        "interval": 1
    }
}
